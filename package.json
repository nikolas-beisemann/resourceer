{
  "name": "resourceer",
  "private": true,
  "version": "1.0.0",
  "description": "A modern resource management tool that is easy to learn.",
  "main": "src/index.js",
  "scripts": {
    "prestart": "gulp build",
    "start": "electron-forge start",
    "test": "gulp tests",
    "coverage": "nyc jasmine",
    "prepackage": "gulp build",
    "package": "electron-forge package",
    "premake": "gulp build",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikolas-beisemann/resourceer.git"
  },
  "author": "Nikolas Beisemann",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/nikolas-beisemann/resourceer/issues"
  },
  "homepage": "https://github.com/nikolas-beisemann/resourceer#readme",
  "devDependencies": {
    "@asciidoctor/gulp-asciidoctor": "^2.2.5",
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "browserify": "^17.0.0",
    "electron": "^13.1.1",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-vue": "^7.9.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-jasmine": "^4.0.0",
    "gulp-pug": "^4.0.1",
    "node-plantuml": "^0.9.0",
    "nyc": "^15.1.0",
    "selenium-webdriver": "*",
    "uglifyify": "^5.0.2",
    "vinyl-source-stream": "^2.0.0",
    "jquery": "^3.6.0",
    "markdown-it": "^12.0.6",
    "vue": "^3.0.11",
    "bootstrap": "^5.0.0-beta3",
    "bootstrap-icons": "^1.4.1",
    "chart.js": "^3.2.1",
    "chartjs-plugin-annotation": "^1.0.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "resourceer": {
      "language": "de"
    },
    "forge": {
      "packagerConfig": {
        "ignore": [
          ".github",
          ".nyc_output",
          "dev_guide",
          "doc",
          "functional",
          "spec",
          "src/frontend",
          "tasks",
          "gulpfile.js",
          "README.md"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "resourceer"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "linux"
          ]
        }
      ]
    }
  }
}
